<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitApp.WorkoutPage"
             Title="Редактировать тренировку">

    <ScrollView Padding="20" >
        <VerticalStackLayout Spacing="15">

            <!-- Название -->
            <Label Text="Название" FontAttributes="Bold" FontSize="16"/>
            <Entry Text="{Binding WorkoutName}" 
                   Placeholder="Введите название"
                   ClearButtonVisibility="WhileEditing"/>

            <!-- Описание -->
            <Label Text="Описание" FontAttributes="Bold" FontSize="16"/>
            <Editor Text="{Binding WorkoutDescription}"
                    Placeholder="Введите описание"
                    HeightRequest="100"/>

            <!-- Дата -->
            <Label Text="Дата тренировки" FontAttributes="Bold" FontSize="16"/>
            <DatePicker Date="{Binding WorkoutDate}"/>

            <!-- Кнопки -->
            <StackLayout Orientation="Horizontal" Spacing="10" Margin="0,20,0,0">
                <Button Text="Сохранить" 
                        Clicked="OnSaveClicked"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        CornerRadius="8"
                        Padding="20,10"/>
                <Button Text="Удалить" 
                        Clicked="OnDeleteClicked"
                        BackgroundColor="#F44336"
                        TextColor="White"
                        CornerRadius="8"
                        Padding="20,10"/>
                <Button Text="Отмена" 
                        Clicked="OnCancelClicked"
                        BackgroundColor="#9E9E9E"
                        TextColor="White"
                        CornerRadius="8"
                        Padding="20,10"/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
