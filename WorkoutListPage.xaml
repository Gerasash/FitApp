<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitApp.WorkoutListPage"
             xmlns:local="clr-namespace:FitApp.ViewModels"
             Title="WorkoutListPage"
             >
    <VerticalStackLayout>
        <Entry Placeholder = "введи название тренировки" Text="{Binding NewWorkoutName, Mode=TwoWay}"></Entry>
        <Button Text="Добавить тренировку" Command="{Binding AddWorkoutCommand}"></Button>
        <StackLayout Orientation="Vertical">
            <CollectionView ItemsSource="{Binding Workouts}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <Label Text="{Binding Name}" FontSize="18" VerticalOptions="Center"></Label>
                            <Button Text="X" Command="{Binding Source={RelativeSource AncestorType={x:Type local:WorkoutViewModel}},Path=DeleteWorkoutCommand } " CommandParameter="{Binding .}"></Button>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
        
    </VerticalStackLayout>
</ContentPage>